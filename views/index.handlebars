<div class="wrapper">
	<h1 id="main-title">CLEVER TITLE</h1>
	<div class="button" id="sign-in">Sign in</div>
	<a href="#" id="create-account">Create an account</a>
</div>

<div class="modal" id="sign-in-modal">
	<div class="modal-content">
		<div class="close"><i class="fa fa-times" aria-hidden="true"></i></div>
		<div class="modal-header"><h3>Please enter your user name and password:</h3></div>
		<div class="modal-body">
			<label for="username">User Name:</label>
			<input name="username" type="text" id="username">
			<br>
			<label for="password">Password:</label>
			<input name="password" type="password" id="password">
			<br>
			<input type="button" value="Log In" id="login-submit">
		</div>
		<div class="modal-footer"></div>
	</div> 	
</div>

<div class="modal" id="create-account-modal">
	<div class="modal-content">
		<div class="close"><i class="fa fa-times" aria-hidden="true"></i></div>
		<div class="modal-header"></div>
		<div class="modal-body"><h3 class="name" style="margin: 20px"></h3></div>
		<div class="modal-footer"></div>
	</div> 	
</div>
